<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.*?>
<?import javafx.scene.effect.ColorAdjust?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>
<Pane xmlns:fx="http://javafx.com/fxml/1" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity"
      minWidth="-Infinity" prefHeight="437.0" prefWidth="780.0" xmlns="http://javafx.com/javafx/11.0.2"
      fx:controller="com.example.sportify.Controller">
    <ImageView fitHeight="458.0" fitWidth="780.0" pickOnBounds="true" preserveRatio="true">
        <Image url="@Sfondo.jpg"/>
        <effect>
            <ColorAdjust/>
        </effect>
    </ImageView>
    <VBox alignment="TOP_CENTER" layoutX="-2.0" layoutY="-2.0" prefHeight="444.0" prefWidth="786.0">
        <GridPane prefHeight="423.0" prefWidth="786.0">
            <columnConstraints>
                <ColumnConstraints hgrow="SOMETIMES" maxWidth="257.0" minWidth="10.0" prefWidth="151.0"/>
                <ColumnConstraints halignment="CENTER" hgrow="SOMETIMES" maxWidth="492.0" minWidth="10.0"
                                   prefWidth="455.0"/>
                <ColumnConstraints hgrow="SOMETIMES" maxWidth="267.0" minWidth="10.0" prefWidth="151.0"/>
            </columnConstraints>
            <rowConstraints>
                <RowConstraints maxHeight="237.0" minHeight="10.0" prefHeight="73.0" vgrow="SOMETIMES"/>
                <RowConstraints maxHeight="303.0" minHeight="10.0" prefHeight="120.0" vgrow="SOMETIMES"/>
                <RowConstraints maxHeight="277.0" minHeight="10.0" prefHeight="134.0" vgrow="SOMETIMES"/>
                <RowConstraints maxHeight="170.0" minHeight="5.0" prefHeight="96.0" vgrow="SOMETIMES"/>
            </rowConstraints>
          <ImageView fitHeight="263.0" fitWidth="333.0" pickOnBounds="true" preserveRatio="true" GridPane.columnIndex="1" GridPane.rowIndex="1">
            <Image url="@Sportify logo.png" />
          </ImageView>
            <GridPane alignment="TOP_CENTER" prefHeight="152.0" prefWidth="465.0" GridPane.columnIndex="1"
                      GridPane.rowIndex="2">
                <columnConstraints>
                    <ColumnConstraints halignment="CENTER" hgrow="SOMETIMES" maxWidth="1.7976931348623157E308"
                                       minWidth="1.0" prefWidth="1.0"/>
                    <ColumnConstraints halignment="CENTER" hgrow="SOMETIMES" maxWidth="346.0" minWidth="10.0"
                                       prefWidth="338.0"/>
                </columnConstraints>
                <rowConstraints>
                    <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
                    <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
                </rowConstraints>
                <Text fontSmoothingType="LCD" strokeType="OUTSIDE" strokeWidth="0.0" text="Username">
                    <font>
                        <Font name="Comic Sans MS" size="18.0"/>
                    </font>
                </Text>
                <TextField fx:id="username" maxWidth="233.0" prefHeight="33.0" prefWidth="226.0"
                           GridPane.columnIndex="1" GridPane.halignment="CENTER">
                    <cursor>
                        <Cursor fx:constant="TEXT"/>
                    </cursor>
                </TextField>
                <Text fontSmoothingType="LCD" strokeType="OUTSIDE" strokeWidth="0.0" text="Password"
                      GridPane.rowIndex="1">
                    <font>
                        <Font name="Comic Sans MS" size="18.0"/>
                    </font>
                </Text>
                <PasswordField fx:id="password" maxWidth="233.0" prefHeight="33.0" prefWidth="226.0"
                               GridPane.columnIndex="1" GridPane.halignment="CENTER" GridPane.rowIndex="1">
                    <cursor>
                        <Cursor fx:constant="TEXT"/>
                    </cursor>
                </PasswordField>
                <padding>
                    <Insets bottom="10.0"/>
                </padding>
            </GridPane>
            <Button fx:id="signUp" mnemonicParsing="false" onAction="#signSignUpAction" onMouseEntered="#lightColor"
                    onMouseExited="#darkColor" prefHeight="54.0" prefWidth="95.0"
                    style="-fx-background-color: #2571b9; -fx-border-width: 4px; -fx-border-color: #000000; -fx-border-radius: 8px; -fx-background-radius: 12px;"
                    text="Sign Up" GridPane.halignment="CENTER" GridPane.rowIndex="3">
                <cursor>
                    <Cursor fx:constant="HAND"/>
                </cursor>
                <font>
                    <Font name="Comic Sans MS" size="17.0"/>
                </font>
            </Button>
            <Button fx:id="submitLogin" mnemonicParsing="false" onAction="#submitActionLogin"
                    onMouseEntered="#lightColor"
                    onMouseExited="#darkColor" prefHeight="54.0" prefWidth="95.0"
                    style="-fx-background-color: #2571b9; -fx-border-width: 4px; -fx-border-color: #000000; -fx-border-radius: 8px; -fx-background-radius: 12px;"
                    text="Submit" GridPane.columnIndex="1" GridPane.halignment="CENTER" GridPane.rowIndex="3">
                <cursor>
                    <Cursor fx:constant="HAND"/>
                </cursor>
                <font>
                    <Font name="Comic Sans MS" size="17.0"/>
                </font>
            </Button>
            <Button fx:id="skipLogin" mnemonicParsing="false" onMouseEntered="#lightColor" onMouseExited="#darkColor"
                    prefHeight="53.0" prefWidth="92.0"
                    style="-fx-background-color: #2571b9; -fx-border-width: 4px; -fx-border-color: #000000; -fx-border-radius: 8px; -fx-background-radius: 12px;"
                    text="Skip" GridPane.columnIndex="2" GridPane.halignment="CENTER" GridPane.rowIndex="3">
                <cursor>
                    <Cursor fx:constant="HAND"/>
                </cursor>
                <font>
                    <Font name="Comic Sans MS" size="17.0"/>
                </font>
            </Button>
            <Button fx:id="home" alignment="CENTER" contentDisplay="CENTER" ellipsisString="" graphicTextGap="0.0"
                    mnemonicParsing="false" onAction="#homeAction" onMouseEntered="#lightColor"
                    onMouseExited="#darkColor" prefHeight="52.0" prefWidth="52.0"
                    style="-fx-background-color: #2571b9; -fx-border-width: 4px; -fx-border-color: #000000; -fx-border-radius: 8px; -fx-background-radius: 12px;"
                    text="🏠" textAlignment="CENTER" wrapText="true" GridPane.halignment="CENTER">
                <GridPane.margin>
                    <Insets/>
                </GridPane.margin>
                <font>
                    <Font name="Comic Sans MS Bold" size="18.0"/>
                </font>
                <cursor>
                    <Cursor fx:constant="HAND"/>
                </cursor>
            </Button>
        </GridPane>
  </VBox>
</Pane>
